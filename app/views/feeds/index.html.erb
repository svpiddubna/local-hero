<div class='container'>

  <h1> Posts Index Page </h1>

  <%= link_to "Create a new post", new_task_path, class: "btn btn-info" %>

  <div class='row'>
    <% @posts.each do |post| %>
    <div class="col-xs-12 col-md-6">
      <% if post.type == "Event" %>
      <%= render 'feeds/events_card', post: post %>

      <% elsif post.type == "Question" %>
      <%= render 'feeds/questions_card', post: post %>

      <% else %>
      <%= render 'feeds/tasks_card', post: post %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
