<div class='container'>

  <h1> Activity Near You </h1>

  <%= link_to "Create a new post", new_task_path, class: "btn btn-info sticky-button" %>
  <div class='row'>
    <div class="col-md-4">
      <div class="card-filter text-dec-none sticky-filter">
        <strong><h2 class="card-filter-infos" id="card-filter-info-header">Filter by: </h2></strong>
        <p class="card-filter-inside"> <%= link_to "Display All", feeds_path %> </p>
        <p class="card-filter-inside"> <%= link_to "Events", events_path %> </p>
        <p class="card-filter-inside"> <%= link_to "Tasks", tasks_path %></p>
        <strong><p class="card-filter-inside"> <%= link_to "Questions", questions_path %> </p></strong>
      </div>
      <div class="card-map text-dec-none sticky-map">
        <strong><h2 class="card-map-infos" id="card-map-info-header">You are located here: </h2></strong>
        <p class="card-map-inside"> There are 14 localheroes near you </p>
      </div>
    </div>

    <div class="col-md-8">
      <% @questions.each do |question| %>
      <%= render 'questions/questions_only_card', question: question %>
      <% end %>
    </div>

  </div>
</div>

