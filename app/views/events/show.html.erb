<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-4">
      <div class="event-card-1">
          <%= image_tag "https://images.pexels.com/photos/903400/pexels-photo-903400.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260", alt:"event_photo", type: "image" %>
          <div class="event-card-body">
            <h4><%= @event.title %></h4>
            <p><%= @event.starts_at.to_formatted_s(:long_ordinal) %></p>
            <p><%= @event.address %></p>
          </div>
        </div>
        <div class="event-card-2">
          <div class="event-card-header">
            <p>Details</p>
          </div>
          <p><%= @event.content %></p>
        </div>

      </div>
    </div>
  </div>
</div>
