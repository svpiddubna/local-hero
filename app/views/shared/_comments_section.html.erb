<div class="comments-section">
    <p>Responses</p>
  <div class="row">
    <% post.comments.each do |comment| %>
      <div class="col-xs-12 col-md-12">
        <%= render 'shared/comment', comment: comment %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-12">
      <div>
        <%= simple_form_for([post, comment]) do |f| %>
          <%= f.input :content, label: "Write a response" %>
          <%= hidden_field_tag :origin_view, "#{controller_name}/#{action_name}" %>
          <%= f.submit "Post", class: "btn btn-info white-text" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
