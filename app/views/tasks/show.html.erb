<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <div class="task-card">
        <div class="task-card-avatar">
          <%= image_tag "http://www.placehold.it/40x40", class: "rounded-circle", alt:"avatar", type: "image" %>
          <p><%= @task.user.first_name %></p>
        </div>

        <div>
          <div class="task-card-header">
            <p><%= @task.title %></p>
          </div>
          <div class="task-card-body">
            <p><%= @task.content %></p>
            <p><%= @task.photo.url %></p>
          </div>

        <% if (@task.done != true) && (current_user.id == @task.user_id) %>
        <%= link_to("Mark as done?", task_path(params[:id]), :method => :patch, :confirm => "Are you sure?", class: "btn btn-info") %>
        <% else %>
        <% end %>

        </div>
      </div>
    </div>
  </div>

  <div class="comments-section">
    <div class="row">
      <% @task.comments.each do |comment| %>
        <div class="col-xs-12 col-md-12">
          <%= render 'shared/comment', comment: comment %>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-12">
        <div>
          <%= simple_form_for([@post, @comment]) do |f| %>
            <%= f.input :content %>
            <%= f.submit "Post", class: "btn btn-info" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
