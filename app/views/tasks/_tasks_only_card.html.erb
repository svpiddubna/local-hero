
<%= link_to task_path(task),  class: "text-dec-none" do%>
  <div class="card-post">
    <div class="label label-info label-abs"><i class="fas fa-hammer"> </i> <%= task.type %></div>
    <div class="card-post-infos">
      <div>
        <h2 id="card-post-info-header"><%= task.title %></h2>
        <p id="card-post-info-content"><%= task.content %></p>

        <p id="card-post-done"><strong> Status: </strong>
          <% if task.done == false %>
          <%= "Completed" %>
          <% else %>
          <%= "Still need a hand!" %>
          <% end %>
        </p>

        <% if task.photo? %>
        <%= cl_image_tag task.photo, :class => "post_image" %>
        <% else %>
        <%= image_tag "https://images.unsplash.com/photo-1526891993611-eca1e7d7b582?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80", :class => "post_image" %>
        <% end %>

      </div>
    </div>
  </div>
<% end %>
